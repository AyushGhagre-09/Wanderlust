        <a href="/listings/category/rooms"><i class="fa-solid fa-bed"></i></a>
      </div>
      <p>Rooms</p>
    </div>
    <div id="filter">
      <div>
        <a href="/listings/category/iconic-cities"
          ><i class="fa-solid fa-mountain-city"></i
        ></a>
      </div>
      <p>Iconic Cities</p>
    </div>
    <div id="filter">
      <div>
        <a href="/listings/category/mountain"><i class="fa-solid fa-mountain"></i></a>
      </div>
      <p>Mountain</p>
    </div>
    <div id="filter">
      <div>
        <a href="/listings/category/castles"><i class="fa-solid fa-chess-rook"></i></a>
      </div>
      <p>Castles</p>
    </div>
    <div id="filter">
      <div>
        <a href="/listings/category/amazing-pools"
          ><i class="fa-solid fa-person-swimming"></i
        ></a>
      </div>
      <p>Amazing pools</p>
    </div>
    <div id="filter">
      <div>
        <a href="/listings/category/camping"><i class="fa-solid fa-campground"></i></a>
      </div>
      <p>Camping</p>
    </div>
    <div id="filter">
      <div>
        <a href="/listings/category/farms"><i class="fa-solid fa-tractor"></i></a>
      </div>
      <p>Farms</p>
    </div>
    <div id="filter">
      <div>
        <a href="/listings/category/artic"><i class="fa-solid fa-snowflake"></i></a>
      </div>
      <p>Arctic</p>
    </div>
  </div>
  <div class="tax-toggle" class="ps-5">
    <div class="form-check-reverse form-switch">
      <input
        class="form-check-input"
        type="checkbox"
        id="flexSwitchCheckDefault"
      />
      <label class="form-check-label" for="flexSwitchCheckDefault"
        >Display total after taxes</label
      >
    </div>
  </div>
</div>
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-2">
  <% for(listing of allListings){%>
  <a href="/listings/<%=listing._id%>" class="listing-link">
    <div class="card col listing-card">
      <img
        src="<%=listing.image.url%>"
        class="card-img-top"
        alt="listing-image"
        style="height: 20rem"
      />
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="card-text">
          <b><%=listing.title%></b>
          <br />
          &#8377;<%=listing.price.toLocaleString("en-IN")%>/night
          <i class="tax-info">&nbsp; +18% GST </i>
        </p>
      </div>
    </div>
  </a>

  <%}%>
</div>

